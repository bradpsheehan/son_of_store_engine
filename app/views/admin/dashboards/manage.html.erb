<div class="admin-dashboard-manage">
  <%= render partial: 'shared/admin_navigation',
             locals: { active: :manage }  %>

  <div class="span8">
    <h1>Manage</h1>
    <hr>
    <p>Name: <%= current_store.name %></p>
    <p>Path: <%= current_store.path %></p>
    <p>Description: <%= current_store.description %></p>
    <p>Theme: <%= current_store.theme %></p>
    <%= link_to 'Edit', admin_edit_store_path %>
    <hr>
    <%= render partial: 'add_admin', locals: { admin: @admin } %>
    <table class="table table-striped">
      <thead>
      <th>Email</th>
      <th></th>
      </thead>
      <tbody>
        <%= render partial: 'admin', collection: @admins %>
      </tbody>
    </table>
    <hr>
    <%= render partial: 'add_stocker', locals: { stocker: @stocker } %>
    <table class="table table-striped">
      <thead>
      <th>Email</th>
      <th></th>
      </thead>
      <tbody>
        <%= render partial: 'stocker', collection: @stockers %>
      </tbody>
    </table>

  </div>
</div>
