<div class="span11 center">

  <h1>Stores</h1>

  <table class="table table-striped">
    <tr>
      <th>Name</th>
      <th>Path</th>
      <th>Description</th>
    </tr>

    <% @stores.each do |store| %>
    <tr>
      <td><%= link_to store.name, home_url(subdomain: store.path) %></td>
      <td><%= store.path %></td>
      <td><%= store.description %></td>
    </tr>
    <% end %>
  </table>

  <br />

</div>
