<div id="checkout_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3>Checkout</h3>
  </div>
  <div class="modal-body">
    <div class="center span3">
      <h4>Login</h4>
      <%= simple_form_for :sessions, url: sessions_path, method: 'POST' do |f| %>
      <%= f.input :email, input_html: { placeholder: t('placeholder.session.email') } %>
      <%= f.input :password %>
      <%= f.hidden_field :next_page, value: store_checkout_path(current_store) %>
      <%= f.button :submit, t('navigation.login'), class: "btn btn-large btn-custom-lighten btn-block" %>
      <%= link_to 'Create an Account', signup_path(next_page: store_checkout_path(current_store)), class: 'btn btn-block' %>
      <%= link_to 'Checkout as Guest', store_checkout_path(current_store), class: 'btn btn-block' %>
      <% end %>
    </div>
    <div style="clear:both"></div>
  </div>
</div>