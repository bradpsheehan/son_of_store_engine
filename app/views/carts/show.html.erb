<div class="cart-overview">
  <% if current_cart.empty? %>

    <h5><%= t('cart.isempty') %></h5>
    <%= link_to t('back.home'), root_path %>

  <% else %>

    <table class="table table-striped">
      <thead>
        <th></th>
        <th><%= t('product.self') %></th>
        <th><%= t('product.price') %></th>
        <th><%= t('product.quantity') %></th>
      </thead>
      <tbody>
        <%= render partial: 'cart_item' %>
      </tbody>
    </table>


    <div id="shopping_cart_summary">
        <div style="padding-right: 10px;"><h3 style="text-align: right;">Total: <%= number_to_currency(current_cart.total) %></h3></div>
      <div class ="btn-toolbar">
        <span class="btn-group pull-right">
          <%= render partial: 'checkout_button' %><br /><br />
        </span>
      </div>

      <div class="pull-left" style="width: 80px;"> <%= button_to t('cart.empty'), cart_path, class: 'btn btn-block', method: :delete %> </div>

    </div>

  <% end %>
</div>
