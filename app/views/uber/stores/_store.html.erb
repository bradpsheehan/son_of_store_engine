<tr>
  <td><%= link_to store.name, store_path(store) %></td>
  <td><%= store.created_at %></td>
  <td><%= store.status %></td>
  <% if store.status == 'pending' %>
  <td>
    <%= button_to 'Approve',
                approve_uber_store_path(store),
                method: :put, class: 'btn' %>

    <%= button_to 'Disapprove',
                disapprove_uber_store_path(store),
                method: :put, class: 'btn' %>
  </td>
  <% elsif store.status == 'online' %>
  <td>
    <%= button_to 'Take Online',
                toggle_status_uber_store_path(store),
                method: :put, class: 'btn' %>
  </td>
  <% elsif store.status == 'offline' %>
  <td>
    <%= button_to 'Take Offline',
                toggle_status_uber_store_path(store),
                method: :put, class: 'btn' %>
  </td>
  <% end %>
</tr>
