<tr>
  <td>
    <%= link_to store.name, home_url(subdomain: store.path) %>
    <br>
    <%= link_to 'Administer', admin_manage_url(subdomain: store.path) %>
  </td>
  <td><%= store.path %></td>
  <td><%= store.description.slice(0, 32) %></td>
  <td><%= store.status %></td>
  <% if store.status == 'pending' %>
  <td>
    <%= button_to 'Approve',
                approve_uber_store_path(store.id),
                method: :put, class: 'btn' %>

    <%= button_to 'Decline',
                decline_uber_store_path(store.id),
                method: :put, class: 'btn' %>
  </td>
  <% elsif store.status == 'online' %>
  <td>
    <%= button_to 'Disable',
                toggle_online_status_uber_store_path(store.id),
                method: :put, class: 'btn' %>
  </td>
  <% elsif store.status == 'offline' %>
  <td>
    <%= button_to 'Enable',
                toggle_online_status_uber_store_path(store.id),
                method: :put, class: 'btn' %>
  </td>
  <% end %>
</tr>
