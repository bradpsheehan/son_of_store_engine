<% if logged_in? %>
  <%= form_tag store_buy_now_path(current_store), id: "buyNowForm" do %>
    <%= hidden_field_tag :product_id, product.id %>
    <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
            data-key="pk_test_osSOH0LyEEACshdRsLjyvGSz"
            data-image="/assets/marcy_stripe.png"
            data-name="<%= t('store.name') %>"
            data-label="<%= t('product.buynow') %>"
            data-amount="<%= product.price * 100 %>">
    </script>

  <% end %>
<% else %>
  <%= button_to t('product.buynow'), login_path, class: 'btn btn-primary', method: :get %>
<% end %>
